# RedClaw Environment Configuration
# Copy this to .env and configure

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Kaggle Phi-4 API (ngrok tunnel)
LLM_API_URL=https://f5cd-34-44-51-201.ngrok-free.app
LLM_MODEL=phi-4
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Alternative: Local Ollama
# LLM_API_URL=http://localhost:11434
# LLM_MODEL=glm4:latest

# =============================================================================
# HEXSTRIKE-AI INTEGRATION
# =============================================================================
HEXSTRIKE_ENDPOINT=http://localhost:8888
HEXSTRIKE_TIMEOUT=300

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/redclaw

# Redis (optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# Neo4j (optional - for attack graphs)
# NEO4J_URL=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=password

# =============================================================================
# WORKSPACE & STORAGE
# =============================================================================
WORKSPACE_PATH=./data
REPORTS_PATH=./reports
LOGS_PATH=./logs
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Require confirmation before exploitation
AUTO_EXPLOIT=false

# Validate targets are in scope
SCOPE_VALIDATION=true

# Allowed target ranges (CIDR notation, comma-separated)
# ALLOWED_TARGETS=10.0.0.0/8,192.168.0.0/16

# =============================================================================
# TOOL EXECUTION
# =============================================================================
TOOL_TIMEOUT=300
SANDBOX_MODE=false

# SSH for Kali VM (if using remote execution)
KALI_SSH_HOST=192.168.1.100
KALI_SSH_USER=kali
KALI_SSH_PORT=22
